{{#each data as |item|}}
	<div local-class="representative"  {{action 'details' item.id item.name}}>
		<div class="row">
			<div local-class="name" class="col-md-4 col-sm-4 col-xs-4">
				<img local-class="avatar" src= {{item.rep_image}} alt="image">
				<span local>{{item.name}}</span>
			</div>
			<div class="col-md-8 col-sm-8 col-xs-8">
				{{#each item.ability as |info|}}
					<div local-class="info">
						<p>{{info.title}}</p>
						<p>{{info.value}}</p>
					</div>
				{{/each}}
			</div>
		</div>
	</div>
{{/each}}
