{{#bs-tab customTabs=true tagName="" local-class="left" as |tab| }}
    <div class="tab-content" local-class="left-content">
        {{#tab.pane local-class="rep-card inside" elementId="repcard" title="Tab 1" }}
            <h2>代表信息</h2>
            {{target-person-card data=data totalUsedDays=totalUsedDays mdata=mdata}}
        {{/tab.pane}}

        {{#tab.pane local-class="progress inside" elementId="budgetprogress" title="Tab 2" }}
            <h2>预算进度</h2>
            <p local-class="human-text"> <span>预算</span> <span>{{number-format calcBudget.used}}/{{number-format calcBudget.total}}元</span> <span>{{calcBudget.percent}}%</span> </p>
            <div local-class="self-progress" class="progress">
                {{#bs-progress as |p|}}
                    {{p.bar value=calcBudget.percent local-class="self-progress-bar"}}
                {{/bs-progress}}
            </div>
        {{/tab.pane}}
    </div>
    {{#bs-nav type="pills" local-class="right-tabs" stacked=true as |nav|}}
        {{#nav.item local-class="tab" active=(bs-eq tab.activeId "repcard")}}
            <a local-class="tabsa" href="repcard" class="nav-link" role="tab" {{action tab.select "repcard"}}>
                <span class="badge">R</span>
            </a>
        {{/nav.item}}
        {{#nav.item local-class="tab" active=(bs-eq tab.activeId "budgetprogress")}}
            <a local-class="tabsa" href="repcard" class="nav-link" role="tab" {{action tab.select "budgetprogress"}}>
                <span class="badge">B</span>
            </a>
        {{/nav.item}}
    {{/bs-nav}}
{{/bs-tab}}
